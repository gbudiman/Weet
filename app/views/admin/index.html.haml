%div{class: 'pushdown'}
%div
  %div{class: 'pull-left'}
    %h2 Backroom Editor
  %div{class: 'pull-right button-refresh', id: 'refresh'}
    %button{class: 'btn btn-success'}
      %span{class: 'glyphicon glyphicon-refresh'}
      %span{class: 'text'} Refresh

%table{class: 'table table-bordered'}
  %thead
    %tr
      %th ID
      %th Name
      %th Karma
      %th Streak
      %th Karma Refill
  %tbody{id: 'content'}

= stylesheet_link_tag 'bootstrap-editable'
= stylesheet_link_tag 'weeet'
= stylesheet_link_tag 'backroom'

:javascript
  var admin_scripts_loaded = false

  $(document).on('turbolinks:load', function() {
    if (!admin_scripts_loaded) {
      admin.init()
      admin_scripts_loaded = true
    }
  })