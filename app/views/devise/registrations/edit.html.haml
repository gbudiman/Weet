%div{class: 'pushdown'}
%div{class: 'sign-in-form'}
  %h2
    /Edit #{resource_name.to_s.humanize}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control weet', disabled: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field
      /= f.label :current_password
      /%i (we need your current password to confirm your changes)
      %br/
      = f.password_field :current_password, autocomplete: "off", class: 'form-control weet', placeholder: 'Current Password'
    .field
      /= f.label :password
      %br/
      = f.password_field :password, autocomplete: "off", class: 'form-control weet', placeholder: 'New Password'
      - if @minimum_password_length
        %br/
        %em
          = @minimum_password_length
          characters minimum
    .field
      /= f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control weet', placeholder: 'Confirm Password'

    .actions
      = f.submit "Update", class: 'btn btn-primary btn-block'


= stylesheet_link_tag 'weeet'