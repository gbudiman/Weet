%div{class: 'sign-in-form'}
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control weet', placeholder: "Email address"
    .field
      = f.text_field :name, autocomplete: "name", class: 'form-control weet', placeholder: "Friendly name"
    .field
      / - if @minimum_password_length
      /   %em
      /     (#{@minimum_password_length} characters minimum)
      / %br/
      = f.password_field :password, autocomplete: "off", class: 'form-control weet', placeholder: 'Password'
    .field
      /= f.label :password_confirmation
      /%br/
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control weet', placeholder: '(type password again)'
    .actions
      = f.submit "Sign up", class: 'btn btn-primary btn-block'
  = render "devise/shared/links"

= stylesheet_link_tag 'weeet'