%div{class: 'modal fade', id: 'sign-in'}
  %div{class: 'modal-dialog modal-sm'}
    %div{class: 'modal-content'}
      %div{class: 'modal-header'}
        %button{type: 'button', class: 'close', 'data-dismiss': 'modal'} &times;
        %h4{class: 'modal-title'} Sign In
      %div{class: 'modal-body'}
        %input{class: 'form-control weet', type: 'text', autocomplete: 'email', placeholder: 'Email Address', id: 'sign-in-email'}
        %input{class: 'form-control weet', type: 'password', autocomplete: 'off', placeholder: 'Password', id: 'sign-in-password'}
        %button{type: 'button', class: 'btn btn-primary btn-block', id: 'sign-in-button'} Sign In
        